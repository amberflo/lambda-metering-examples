{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "eol-last": ["error", "always"],
        "no-return-await": "error",
        "prefer-const": "error",
        "no-trailing-spaces": "error",
        "no-prototype-builtins": "off"
    },
    "overrides": [
        {
            "files": ["tests/**"],
            "plugins": ["jest"],
            "extends": ["plugin:jest/recommended"],
            "env": {
                "jest": true
            }
        }
    ]
}
